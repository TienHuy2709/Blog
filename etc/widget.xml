<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="aht_blog_slider" class="AHT\Blog\Block\Frontend\Blog\Index" is_email_compatible="false"
            placeholder_image="Magento_Widget::placeholder.gif">
        <label translate="true">Blog index slider</label>
        <description translate="true">AHT Blog index slider for widget</description>
        <parameters>
            <parameter name="numberblog" xsi:type="text" required="true" visible="true" sort_order="20">
                <label translate="true">Number Blog to show (frontend)</label>
            </parameter>
            <parameter name="numberslide" xsi:type="select" visible="true" required="true" sort_order="22">
                <label translate="true">Number Slider</label>
                <options>
                    <option name="1" value="1">
                        <label>1</label>
                    </option>
                    <option name="2" value="2" selected="true">
                        <label>2</label>
                    </option>
                    <option name="3" value="3">
                        <label>3</label>
                    </option>
                    <option name="4" value="4">
                        <label>4</label>
                    </option>
                    <option name="5" value="5">
                        <label>5</label>
                    </option>
                </options>
            </parameter>
            <parameter name="slidetoscroll" xsi:type="select" visible="true" required="true" sort_order="23">
                <label translate="true">Slide to scroll</label>
                <options>
                    <option name="1" value="1">
                        <label>1</label>
                    </option>
                    <option name="2" value="2" selected="true">
                        <label>2</label>
                    </option>
                    <option name="3" value="3">
                        <label>3</label>
                    </option>
                    <option name="4" value="4">
                        <label>4</label>
                    </option>
                    <option name="5" value="5">
                        <label>5</label>
                    </option>
                </options>
            </parameter>
            <parameter name="secondslider" xsi:type="select" visible="true" required="true" sort_order="24">
                <label translate="true">Seconds slide to scroll</label>
                <options>
                    <option name="no" value="0">
                        <label>No</label>
                    </option>
                    <option name="1" value="1">
                        <label>1</label>
                    </option>
                    <option name="2" value="2" selected="true">
                        <label>2</label>
                    </option>
                    <option name="3" value="3">
                        <label>3</label>
                    </option>
                    <option name="4" value="4">
                        <label>4</label>
                    </option>
                    <option name="5" value="5">
                        <label>5</label>
                    </option>
                </options>
            </parameter>
            <parameter name="display" xsi:type="select" visible="true" required="true" sort_order="25">
                <label translate="true">Display Type</label>
                <options>
                    <option name="displaylist" value="0">
                        <label>List Blog</label>
                    </option>
                    <option name="displayslide" value="1" selected="true">
                        <label>Slider Blog</label>
                    </option>
                </options>
            </parameter>
            <parameter name="template" xsi:type="select" required="true" visible="true" sort_order="26">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="blog/index.phtml" selected="true">
                        <label translate="true">Blog list slider</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
