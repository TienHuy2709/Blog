<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="blog" translate="label" sortOrder="500">
            <label>Blog</label>
        </tab>
        <section id="blog" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Blog</label>
            <tab>blog</tab>
            <resource>AHT_Blog::config_blog</resource>
            <group id="blog" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Blog page settings</label>
                <field id="is_enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled/Disable Blog</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
            </group>
            <group id="slide" translate="label" type="text" sortOrder="2" showInDefault="2" showInWebsite="2" showInStore="2">
                <label>Slide blog settings</label>
                <field id="is_enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Slide Blog</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="number_blog" translate="label" type="text" sortOrder="3" showInDefault="3" showInWebsite="3" showInStore="3">
                <label>Number slide blog settings</label>
                <field id="number_in_page" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Number blog in page</label>
                    <comment>Must be in the allowed values list.</comment>
                    <validate>validate-number required-entry</validate>
                </field>
                <field id="number_i9n_slide" translate="label" type="text" sortOrder="11" showInDefault="2" showInWebsite="2" showInStore="2">
                    <label>Number blog in slide</label>
                    <comment>Must be in the allowed values list.</comment>
                    <validate>validate-number required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>
